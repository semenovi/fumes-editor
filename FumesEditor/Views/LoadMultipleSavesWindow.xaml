<Window x:Class="FumesEditor.LoadMultipleSavesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Load Multiple Saves" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Content="Add Save Files" Click="AddSaveFiles_Click" HorizontalAlignment="Left" Margin="0,0,0,10"/>

        <ListBox Grid.Row="1" x:Name="SaveFilesList" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Load" Click="Load_Click" Width="75" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="75"/>
        </StackPanel>
    </Grid>
</Window>