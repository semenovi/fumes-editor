<Window x:Class="FumesEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:FumesEditor.Views"
        xmlns:converters="clr-namespace:FumesEditor.Converters"
        Title="fumes editor - vehicle editor" Height="600" Width="800" MinHeight="500" MinWidth="600" WindowStyle="None" ResizeMode="CanResize" AllowsTransparency="True" Background="Transparent">

  <Window.Resources>
    <converters:ComponentDisplayNameConverter x:Key="ComponentDisplayNameConverter"/>
    <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
  </Window.Resources>

  <Border Background="#FF2D2D30" BorderBrush="#FF555555" BorderThickness="1" CornerRadius="5">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="30"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <Border Grid.Row="0" Background="#FF1E1E1E" CornerRadius="5,5,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          
          <TextBlock Grid.Column="0" Text="fumes editor - vehicle editor" 
                     Foreground="#FFEAEAEA" 
                     VerticalAlignment="Center" 
                     HorizontalAlignment="Left" 
                     Margin="10,0,0,0" 
                     FontSize="12"/>
          
          <StackPanel Grid.Column="1" Orientation="Horizontal">
            <Button Content="─" Width="30" Height="30" 
                    Background="Transparent" 
                    Foreground="#FFEAEAEA" 
                    BorderThickness="0" 
                    Click="MinimizeButton_Click"
                    Style="{DynamicResource TitleBarButtonStyle}"/>

            <Button Content="✕" Width="30" Height="30" 
                    Background="Transparent" 
                    Foreground="#FFEAEAEA" 
                    BorderThickness="0" 
                    Click="CloseButton_Click"
                    Style="{DynamicResource TitleBarButtonStyle}"/>
          </StackPanel>
        </Grid>
      </Border>

      <views:KitView Grid.Row="1" x:Name="KitView"/>
      
      <Grid Grid.Row="2" Background="#FF3F3F46" Margin="0,5,0,0">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <TextBox Grid.Row="0" Grid.Column="0" x:Name="LoadPathTextBox" 
                 Margin="10,10,5,5" Height="25" VerticalContentAlignment="Center"
                 Background="#FF2D2D30" Foreground="#FFEAEAEA" BorderBrush="#FF555555"/>
        <Button Grid.Row="0" Grid.Column="1" Content="load" 
                Margin="0,10,10,5" Width="80" Height="25"
                Background="#FF007ACC" Foreground="White" BorderThickness="0"
                Click="LoadButton_Click"/>
                
        <TextBox Grid.Row="0" Grid.Column="2" x:Name="SavePathTextBox" 
                 Margin="10,10,5,5" Height="25" VerticalContentAlignment="Center"
                 Background="#FF2D2D30" Foreground="#FFEAEAEA" BorderBrush="#FF555555"/>
        <Button Grid.Row="0" Grid.Column="3" Content="save" 
                Margin="0,10,10,5" Width="80" Height="25"
                Background="#FF007ACC" Foreground="White" BorderThickness="0"
                Click="SaveButton_Click"/>
                
        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                   Text="load path:" Margin="10,0,0,10" 
                   Foreground="#FFAAAAAA" FontSize="10"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" 
                   Text="save path:" Margin="10,0,0,10" 
                   Foreground="#FFAAAAAA" FontSize="10"/>
      </Grid>

    </Grid>
  </Border>
</Window>